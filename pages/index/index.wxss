.container{
  width: 100%;
  padding: 0 10rpx;
  box-sizing: border-box;
  background: #576b95;
  padding-bottom: 10rpx;
  border-radius: 0 0 16rpx 16rpx;
}
swiper{
  width: 100%;
  height: 370rpx;
}
swiper-item{
  width: 100%;
}
swiper-item image{
  width: 100%;
  border-radius: 12rpx;
}

.nav{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  background: #f9f9f9;
  border-radius: 16rpx;
  padding-top: 16rpx;
}
.nav .menu{
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 16rpx;
}
.menu text{
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}
.menu image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.hot{
  display: flex;
  justify-content: center;
  background: #fff;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, .1);
  line-height: 2.4;
  font-size: 40rpx;
}
.wrap{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.wrap .product{
  width: 46%;
  background: #f9f9f9;
  border-radius: 16rpx;
  margin: 6rpx 10rpx;
}
.product .grid-img{
  width: 250rpx;
  height: 250rpx;
  margin: 50rpx auto 0;
  overflow: hidden;
}
.product .grid-img image{
  width: 250rpx;
}
.product .info{
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
  line-height: 2;
  text-align: center;
}
.info .name{
  color: #3a3a3a;
  font-size: 28rpx;
}
.info .price{
  color: #d0021b;
  font-size: 26rpx;
}

.back-top{
  position: fixed;
  bottom: 50rpx;
  right: 50rpx;
  width: 80rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, .3);
  line-height: 80rpx;
  text-align: center;
  font-weight: bold;
  color: #576b95;
}

.fixed{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
}