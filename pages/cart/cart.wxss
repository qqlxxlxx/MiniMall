.wrap{
  padding: 10rpx 0 92rpx;
  border-top: 1px solid rgba(50, 100, 187, 0.3);
}

.product{
  width: 100%;
  height: 180rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1px solid rgba(50, 100, 187, 0.3);
  padding: 0 20rpx;
  box-sizing: border-box;
  /* border-radius: 16rpx;*/
  /* margin-bottom: 10rpx;*/
}
checkbox-group{
  margin-right: 16rpx;
}
.product .wrap-img{
  width: 150rpx;
  height: 150rpx;
  background: #f9f9f9;
  overflow: hidden;
}
.wrap-img image{
  width: 150rpx;
}
.product .btn{
  display: flex;
}
.btn view{
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
}
.btn .add, .btn .dec{
  background: #f6f6f6;
}
.product .info{
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
  font-size: 28rpx;
}
.info .price{
  color: #d0021b;
  font-size: 26rpx;
  font-weight: 600;
}

.pay{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  background-color: #f6f6f6;
}
.pay view{
  flex: 1;
  padding-left: 100rpx;
  line-height: 92rpx;
}
