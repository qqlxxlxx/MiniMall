.container{
  width: 100%;
  display: flex;
}

.type{
  width: 20%;
  height: 100vh;
  padding-top: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  background: #225599;
}
.type .type-item{
  line-height: 2;
  text-align: center;
}
.type-item text{
  color: #fff;
}

.list{
  width: 80%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.list .list-item{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  padding: 10rpx;
}
.list-item .img-wrap{
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
}
.img-wrap image{
  width: 100%;
}
.list-item .info{
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
}
.info .name{
  color: #3a3a3a;
  font-size: 28rpx;
}
.info .price{
  color: #d0021b;
  font-size: 26rpx;
}

.cur{
  font-weight: bold;
}